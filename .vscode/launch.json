    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pro Debug clang++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/${architecture}/debug/perftest_cpp",
            "args": ["-pub"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
        },
        {
            "name": "Micro Debug clang++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/${architecture}/debug/perftest_cpp_micro",
            "args": ["-pub"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
        },
        {
            "name": "Pro Debug g++ (Publisher)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/x64Linux4gcc7.3.0/debug/perftest_cpp03",
            "args": [
                "-pub", 
                "-noPrint",
                "-domain", "207",
                "-verbosity", "2" 
                "-executionTime", "15", 
                "-transport", "UDPv4",
                "-latencyCount", "1", 
                "-dataLen", "100000000", 
                //"-flatData",
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable all-exceptions",
                    "text": "-exec \"catch throw\"",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Pro Debug g++ (Subscriber)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/x64Linux4gcc7.3.0/debug/perftest_cpp03",
            "args": [
                "-sub", 
                "-noPrint", 
                "-domain", "207", 
                "-transport", "UDPv4", 
                "-verbosity", "2", 
                "-dataLen", "100000000", 
                //"-flatData",
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable all-exceptions",
                    "text": "-exec \"catch throw\"",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Micro Debug g++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/${architecture}/debug/perftest_cpp_micro",
            "args": ["-pub"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
        }
    ]
}